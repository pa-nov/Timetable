<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_small"
    android:backgroundTint="@color/widget_background"
    android:padding="12dp">

    <TextView
        android:id="@+id/day_of_week"
        style="@style/Widget_DayOfWeek"
        android:layout_alignParentTop="true"
        android:text="@string/placeholder_day_of_week" />

    <TextView
        android:id="@+id/date"
        style="@style/Widget_DateTime"
        android:layout_alignParentTop="true"
        android:gravity="end"
        android:text="@string/placeholder_date" />

    <TextView
        android:id="@+id/time"
        style="@style/Widget_DateTime"
        android:layout_below="@id/date"
        android:gravity="end"
        android:text="@string/placeholder_time" />

    <TextView
        android:id="@+id/now_title"
        style="@style/Widget_Title"
        android:layout_width="wrap_content"
        android:layout_below="@id/day_of_week"
        android:text="@string/widget_now" />

    <TextView
        android:id="@+id/now_text"
        style="@style/Widget_Text"
        android:layout_below="@id/day_of_week"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/now_title"
        android:text="@string/placeholder_something" />

    <TextView
        android:id="@+id/now_subtext"
        style="@style/Widget_Text"
        android:layout_below="@id/day_of_week"
        android:gravity="end"
        android:text="@string/placeholder_room" />

    <TextView
        android:id="@+id/now_time_title"
        style="@style/Widget_Title_Small"
        android:layout_below="@id/now_text"
        android:text="@string/widget_now_time" />

    <TextView
        android:id="@+id/now_time_text"
        style="@style/Widget_Text"
        android:layout_below="@id/now_time_title"
        android:text="@string/placeholder_sometime" />

    <TextView
        android:id="@+id/then_title"
        style="@style/Widget_Title"
        android:layout_width="wrap_content"
        android:layout_above="@id/then_time_title"
        android:text="@string/widget_then" />

    <TextView
        android:id="@+id/then_text"
        style="@style/Widget_Text"
        android:layout_above="@id/then_time_title"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/then_title"
        android:text="@string/placeholder_something" />

    <TextView
        android:id="@+id/then_subtext"
        style="@style/Widget_Text"
        android:layout_above="@id/then_time_title"
        android:gravity="end"
        android:text="@string/placeholder_room" />

    <TextView
        android:id="@+id/then_time_title"
        style="@style/Widget_Title_Small"
        android:layout_above="@id/then_time_text"
        android:text="@string/widget_then_time" />

    <TextView
        android:id="@+id/then_time_text"
        style="@style/Widget_Text"
        android:layout_alignParentBottom="true"
        android:text="@string/placeholder_sometime" />

</RelativeLayout>