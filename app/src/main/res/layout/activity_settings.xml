<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SettingsActivity">

    <FrameLayout style="@style/App_Frame_Main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView style="@style/App_Text_Title" android:text="@string/app_settings"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/App_TextInput"
                    app:hintTextColor="@color/green"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp">
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/App_TextInputEdit"
                        android:id="@+id/textJson"
                        android:hint="@string/app_json_name"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/App_TextInput"
                    app:hintTextColor="@color/green"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp">
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/App_TextInputEdit"
                        android:id="@+id/textModifierHour"
                        android:hint="@string/app_modifier_hour"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/App_TextInput"
                    app:hintTextColor="@color/green"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp">
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/App_TextInputEdit"
                        android:id="@+id/textModifierMinute"
                        android:hint="@string/app_modifier_minute"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/App_TextInput"
                    app:hintTextColor="@color/green"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp">
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/App_TextInputEdit"
                        android:id="@+id/textModifierSecond"
                        android:hint="@string/app_modifier_second"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/App_TextInput"
                    app:hintTextColor="@color/green"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp">
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/App_TextInputEdit"
                        android:id="@+id/textInitialIndex"
                        android:hint="@string/app_initial_index"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

    <Button style="@style/App_Button_Action"
        android:id="@+id/applyButton"
        android:text="@string/app_apply"
        app:backgroundTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton style="@style/App_Button_Return"
        app:srcCompat="@drawable/icon_return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/app_return"/>

</androidx.constraintlayout.widget.ConstraintLayout>