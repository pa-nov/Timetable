<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Clock">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:background="@drawable/drawable_rounded"
        android:backgroundTint="@color/app_Background_Dark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/app_clock"
            android:textAppearance="@style/App.Text.Title"
            android:gravity="center"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/drawable_rounded"
        app:backgroundTint="@color/yellow"
        android:text="@string/debug_something"
        android:textColor="@color/app_Background"
        android:textAppearance="@style/App.Text.Button"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/returnButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/drawable_rounded"
        app:backgroundTint="@color/yellow"
        android:contentDescription="@string/app_return"
        app:srcCompat="@drawable/icon_return"
        android:scaleType="fitCenter"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>