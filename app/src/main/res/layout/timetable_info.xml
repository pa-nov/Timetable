<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Frame_Scroll"
    android:background="@drawable/rounded"
    android:backgroundTint="@color/line"
    android:padding="10dp">

    <LinearLayout
        style="@style/Frame_Vertical"
        android:divider="@drawable/divider"
        android:showDividers="middle">

        <LinearLayout
            style="@style/Frame_Info"
            android:padding="12dp">

            <TextView
                style="@style/Info_Title"
                android:text="@string/info_name" />

            <TextView
                android:id="@+id/text_name"
                style="@style/Info_Text"
                android:text="@string/placeholder_something" />

            <TextView
                android:id="@+id/title_teacher"
                style="@style/Info_Title"
                android:text="@string/info_teacher" />

            <TextView
                android:id="@+id/text_teacher"
                style="@style/Info_Text"
                android:text="@string/placeholder_somebody" />

            <TextView
                android:id="@+id/title_room"
                style="@style/Info_Title"
                android:text="@string/info_room" />

            <TextView
                android:id="@+id/text_room"
                style="@style/Info_Text"
                android:text="@string/placeholder_room" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame_week_even"
            style="@style/Frame_Info">

            <TextView
                android:id="@+id/title_week_even"
                style="@style/Info_Title"
                android:layout_gravity="center_horizontal"
                android:text="@string/info_week_even" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame_week_odd"
            style="@style/Frame_Info">

            <TextView
                android:id="@+id/title_week_odd"
                style="@style/Info_Title"
                android:layout_gravity="center_horizontal"
                android:text="@string/info_week_odd" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>