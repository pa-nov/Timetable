<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded"
    android:backgroundTint="@color/line"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/Frame_Info"
                android:layout_marginTop="0dp"
                android:padding="16dp">

                <TextView
                    style="@style/Info_Title"
                    android:text="@string/info_name" />

                <TextView
                    android:id="@+id/name"
                    style="@style/Info_Text"
                    android:text="@string/placeholder_something" />

                <TextView
                    android:id="@+id/teacherTitle"
                    style="@style/Info_Title"
                    android:text="@string/info_teacher" />

                <TextView
                    android:id="@+id/teacher"
                    style="@style/Info_Text"
                    android:text="@string/placeholder_somebody" />

                <TextView
                    android:id="@+id/roomTitle"
                    style="@style/Info_Title"
                    android:text="@string/info_room" />

                <TextView
                    android:id="@+id/room"
                    style="@style/Info_Text"
                    android:text="@string/placeholder_room" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weekEven"
                style="@style/Frame_Info">

                <TextView
                    android:id="@+id/weekEvenTitle"
                    style="@style/Info_Title"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/info_week_even" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weekOdd"
                style="@style/Frame_Info">

                <TextView
                    android:id="@+id/weekOddTitle"
                    style="@style/Info_Title"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/info_week_odd" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>