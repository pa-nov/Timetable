<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Layout.FillHeight">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Layout.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Layout.Horizontal.Rounded">
        <item name="android:background">@drawable/square_rounded_small</item>
        <item name="android:backgroundTint">@color/item</item>
    </style>

    <style name="Layout.Horizontal.Divided">
        <item name="android:divider">@drawable/divider</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="Layout.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Layout.Vertical.Rounded">
        <item name="android:background">@drawable/square_rounded_small</item>
        <item name="android:backgroundTint">@color/item</item>
    </style>

    <style name="Layout.Vertical.Divided">
        <item name="android:divider">@drawable/divider</item>
        <item name="android:showDividers">middle</item>
    </style>

</resources>