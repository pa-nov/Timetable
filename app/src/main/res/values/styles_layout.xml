<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScrollContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbarSize">0dp</item>
    </style>

    <style name="VerticalLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="Layout_Rounded_Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/square_rounded_small</item>
        <item name="android:backgroundTint">@color/item</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Vertical_Rounded_Small" parent="Layout_Rounded_Small">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Horizontal_Rounded_Small" parent="Layout_Rounded_Small">
        <item name="android:orientation">horizontal</item>
    </style>

</resources>