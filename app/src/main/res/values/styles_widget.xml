<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/square_rounded</item>
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:padding">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/green</item>
        <item name="cursorColor">@color/green</item>
    </style>

    <style name="TextInputEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/square_rounded_small</item>
        <item name="android:backgroundTint">@color/item</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:text">@string/message_error</item>
        <item name="android:theme">@style/Theme.TextInputEdit</item>
    </style>

    <style name="Button_Item" parent="Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/square_rounded_small</item>
        <item name="android:backgroundTint">@color/accent_disabled</item>
        <item name="android:textColor">@color/text_enabled</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextInputLayout_Item" parent="TextInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextInputEdit_Item" parent="TextInputEdit">
        <item name="android:gravity">center</item>
    </style>

</resources>