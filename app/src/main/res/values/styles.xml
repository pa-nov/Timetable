<resources>

    <style name="Text.WeekDay" parent="android:TextAppearance">
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">@color/widget_Text_Text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.DateTime" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/widget_Text_Time</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.NameTitle" parent="android:TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/widget_Text_Title</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Text.TimeTitle" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/widget_Text_Title</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Text.Text" parent="android:TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/widget_Text_Text</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>