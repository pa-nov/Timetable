<resources>

    <item name="buttonReturn" type="id"/>


    <style name="App_Frame_Main">
        <item name="android:layout_marginBottom">80dp</item>
        <item name="android:background">@drawable/drawable_rounded</item>
        <item name="android:backgroundTint">@color/app_Background_Dark</item>
    </style>
    <style name="App_Text_Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="App_Button_Action">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginEnd">80dp</item>
        <item name="android:background">@drawable/drawable_rounded</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_Background</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="App_Button_Return">
        <item name="android:id">@id/buttonReturn</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/drawable_rounded</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="App_CheckBox_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/yellow</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="App_TextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColorHint">@color/blue</item>
    </style>
    <style name="App_TextInputEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drawable_rounded</item>
        <item name="android:backgroundTint">@color/app_Background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="App_Timetable_Index">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="App_Timetable_Time">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="App_Timetable_Name">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="App_Timetable_Data">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="App_Clock_Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/widget_Text_Time</item>
    </style>
    <style name="App_Clock_Time">
        <item name="android:textSize">96sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="App_Clock_Text">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Widget_DayOfWeek">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/widget_Text_Text</item>
    </style>
    <style name="Widget_DateTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/widget_Text_Time</item>
    </style>
    <style name="Widget_Title_Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/widget_Text_Title</item>
    </style>
    <style name="Widget_Title_Time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/widget_Text_Title</item>
    </style>
    <style name="Widget_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/widget_Text_Text</item>
    </style>

</resources>