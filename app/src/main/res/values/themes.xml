<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Timetable" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/background</item>
    </style>

    <color name="item">#B0B0B0</color>
    <color name="line">#B0B0B0</color>
    <color name="background">#D0D0D0</color>
    <color name="title">#808080</color>
    <color name="text">@color/black</color>
    <color name="button">@color/blue</color>

    <color name="widget_background">#F3F3F3</color>

    <style name="Theme.DatePicker" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/rounded</item>
        <item name="android:backgroundTint">@color/background</item>
        <item name="android:colorControlActivated">@color/button</item>
        <item name="android:colorControlHighlight">@color/item</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorPrimaryInverse">@color/text</item>
        <item name="android:textColorSecondary">@color/title</item>
        <item name="android:textColorSecondaryInverse">@color/title</item>
        <item name="colorPrimary">@color/button</item>
    </style>

    <style name="Theme.CheckBox" parent="Theme.Timetable">
        <item name="android:colorControlActivated">@color/empty</item>
        <item name="android:colorControlHighlight">@color/empty</item>
    </style>

    <style name="Theme.TextInputEdit" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:colorControlActivated">@color/green</item>
    </style>

</resources>